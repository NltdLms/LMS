
@{
    ViewBag.Title = "ShiftMaster";
}
@if (ViewBag.Authorize == "NoAuth")
{
    <div class="alert alert-danger">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">x</span>
        </button>
        You are not authorized to access this web page.
    </div>
}
else
{
    <style type="text/css">
        .ui-timepicker-container {
            z-index: 1151 !important;
        }

        .ui-autocomplete {
            height: 220px;
            overflow-y: scroll;
            overflow-x: hidden;
        }

        th {
            font-size: 11px;
        }

        td {
            font-size: 12px;
        }
    </style>

    <script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
    <link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="~/Scripts/daterangepicker.js"></script>
    <link href="~/Content/daterangepicker.css" rel="stylesheet" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.css">
    <script src="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.js"></script>

    @section scripts
{

        <script src="~/Scripts/jquery-2.2.4.js"></script>
        <script src="~/Scripts/lms.js?v=1.03"></script>
        <script type="text/javascript" src="~/Scripts/bootstrap.js"></script>
        <script type="text/javascript" src="~/Scripts/bootstrap.js"></script>
        <script src="~/Scripts/bootstrap-datetimepicker.js"></script>
        <link href="~/Content/bootstrap-datetimepicker.css" rel="stylesheet" />
        <script src="~/Scripts/moment.js"></script>
        <link href="~/Content/bootstrap.css" rel="stylesheet" />

    }



    <div class="row">
        <div class="col-sm-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Shift Master</h3>
                </div>
                <div class="box-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <button type="button" class="btn btn-primary pull-right" onclick="AddShiftPopup(0)">ADD</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

        <div id="divForShiftAllocation" class="col-sm-12"></div>

        <style>
            .datepicker {
                z-index: 1600 !important; /* has to be larger than 1050 */
            }
        </style>

    <!-- Modal -->
        <div id="myModal" class="modal fade" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header" style="background-color: #337ab7;color: white;">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" id="ModelTitle"></h4>
                    </div>
                    <div id="alert_placeholder"></div>
                    <div id="divForAddShift" class="modal-body">
                    </div>
                    <div class="modal-footer">
                        
                        <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary" onclick="SaveShiftMaster();">Save</button>
                    </div>
                </div>

            </div>
        </div>

        @section readyscript{
            @{
                <script>
                    $("document").ready(function () {

                        loadShiftMasterDetails();
                    });
                </script>
            }
        }

}
