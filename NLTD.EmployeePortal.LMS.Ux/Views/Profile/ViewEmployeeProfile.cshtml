@model NLTD.EmployeePortal.LMS.Common.DisplayModel.ViewEmployeeProfileModel

<div class="row">
    <div class="col-sm-12">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Employee Profile</h3>
            </div>
            <form role="form">
                <div class="box-body">
                    <div class="row">
                        <div class="col-sm-9">
                        </div>
                        <div class="col-sm-3">
                            <div class="form-group">
                                @Html.CheckBoxFor(e => e.IsActive, new { @disabled = true })
                                @Html.Label("Active")
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-3">
                            <div class="form-group">
                                @Html.Label("First Name")
                                @Html.TextBoxFor(e => e.FirstName, null, new { @class = "form-control", @readonly = true })
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="form-group">
                                @Html.Label("Last Name")
                                @Html.TextBoxFor(e => e.LastName, null, new { @class = "form-control", @readonly = true })
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="form-group">
                                @Html.Label("Corp Id")
                                @Html.TextBoxFor(e => e.LogonId, null, new { @class = "form-control", @readonly = true })
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="form-group">
                                @Html.Label("Employee Id")
                                @Html.TextBoxFor(e => e.EmployeeId, null, new { @class = "form-control", @readonly = true })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">

                                @Html.Label("Email")
                                @Html.TextBoxFor(e => e.EmailAddress, null, new { @class = "form-control", @readonly = true })
                            </div>
                        </div>

                        <div class="col-sm-3">
                            <div class="form-group">
                                @Html.LabelFor(e => e.Gender)
                                @Html.TextBoxFor(e => e.Gender, null, new { @class = "form-control", @readonly = true })
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="form-group">
                                <div class="form-group">
                                    @Html.Label("Mobile Number")
                                    @Html.TextBoxFor(e => e.MobileNumber, null, new { @class = "form-control", @readonly = true })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">

                        <div class="col-sm-3">
                            <div class="form-group">
                                @Html.Label("LMS Role")
                                @Html.TextBoxFor(e => e.RoleText, null, new { @class = "form-control", @readonly = true })
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="form-group">
                                @Html.Label("Reporting To")
                                @Html.TextBoxFor(e => e.ReportedToName, null, new { @class = "form-control", @readonly = true })
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="form-group">
                                @Html.Label("Office")
                                @Html.TextBoxFor(e => e.OfficeName, null, new { @class = "form-control", @readonly = true })
                            </div>
                        </div>

                        <div class="col-sm-3">
                            @Html.Label("Holiday Calendar")
                            @Html.TextBoxFor(e => e.HolidayOfficeName, null, new { @class = "form-control", @readonly = true })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 pull-left"> @Html.Label("Weekly Off(s)")</div>
                    </div>
                    <div class="row" style="padding-top:10px;padding-bottom:10px;">
                        <div class="col-sm-6">
                            <div class="col-sm-3">
                                @Html.CheckBoxFor(e => e.Sunday, new { @disabled = true })
                                @Html.LabelFor(e => e.Sunday, new { style = "font-weight:normal" })
                            </div>
                            <div class="col-sm-3">
                                @Html.CheckBoxFor(e => e.Monday, new { @disabled = true })
                                @Html.LabelFor(e => e.Monday, new { style = "font-weight:normal" })
                            </div>
                            <div class="col-sm-3">
                                @Html.CheckBoxFor(e => e.Tuesday, new { @disabled = true })
                                @Html.LabelFor(e => e.Tuesday, new { style = "font-weight:normal" })
                            </div>
                            <div class="col-sm-3">
                                @Html.CheckBoxFor(e => e.Wednesday, new { @disabled = true })
                                @Html.LabelFor(e => e.Wednesday, new { style = "font-weight:normal" })
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="col-sm-3">
                                @Html.CheckBoxFor(e => e.Thursday, new { @disabled = true })
                                @Html.LabelFor(e => e.Thursday, new { style = "font-weight:normal" })
                            </div>
                            <div class="col-sm-3">
                                @Html.CheckBoxFor(e => e.Friday, new { @disabled = true })
                                @Html.LabelFor(e => e.Friday, new { style = "font-weight:normal" })
                            </div>
                            <div class="col-sm-3">
                                @Html.CheckBoxFor(e => e.Saturday, new { @disabled = true })
                                @Html.LabelFor(e => e.Saturday, new { style = "font-weight:normal" })
                            </div>
                            <div class="col-sm-3">
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>